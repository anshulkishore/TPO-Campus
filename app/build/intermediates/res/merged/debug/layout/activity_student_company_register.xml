<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    tools:context="com.example.anshul.tpocampus.Student.StudentCompanyRegister">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registration_reg_no"
        android:hint="Enter Registration Number"
        android:textColor="#FFFFFF"
        android:textColorHint="#99A3A4"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registration_pwd"
        android:hint="Enter Password"
        android:textColor="#FFFFFF"
        android:textColorHint="#99A3A4"/>

</LinearLayout>
