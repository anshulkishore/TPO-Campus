<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/side_nav_bar"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@color/common_google_signin_btn_text_dark_default" />

    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#1F618D"
                    android:layout_weight="1.3"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Name:"/>

                <TextView
                    android:textColor="#A04000"
                    android:layout_weight="1"
                    android:id="@+id/tname"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#1F618D"
                    android:layout_weight="1.3"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Registration Number:"/>

                <TextView
                    android:textColor="#A04000"
                    android:id="@+id/treg"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#1F618D"
                    android:layout_weight="1.3"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Course:"/>

                <TextView
                    android:textColor="#A04000"
                    android:id="@+id/tcourse"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#1F618D"
                    android:layout_weight="1.3"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Branch:"/>

                <TextView
                    android:textColor="#A04000"
                    android:id="@+id/tbranch"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#1F618D"
                    android:layout_weight="1.3"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Profile Status:"/>

                <TextView
                    android:textColor="#A04000"
                    android:id="@+id/tstatus"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#1F618D"
                    android:layout_weight="1.3"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TPO Credits:"/>

                <TextView
                    android:textColor="#A04000"
                    android:id="@+id/tcredits"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#1F618D"
                    android:layout_weight="1.3"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Internship:"/>

                <TextView
                    android:textColor="#A04000"
                    android:id="@+id/tintern"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>