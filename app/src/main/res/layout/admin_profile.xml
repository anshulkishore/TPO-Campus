<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/main_back4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anshul.tpocampus.Admin.AdminProfile">

    <Button
        android:id="@+id/students_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="30dp"
        android:text="Students"
        android:layout_marginLeft="90dp"
        android:background="@drawable/students" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/companies_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Companies"
            android:layout_marginLeft="90dp"
            android:padding="30dp"
            android:background="@drawable/companies" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/admin_iv"/>
    </LinearLayout>

    <Button
        android:id="@+id/graph_chart_pre_final_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="PRE FINAL YEAR STATS" />

    <Button
        android:id="@+id/graph_chart_final_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="FINAL YEAR STATS" />
</LinearLayout>
