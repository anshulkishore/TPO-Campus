<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_student_companies"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#81C784"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_card"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/company_list"/>

        <TextView
            android:id="@+id/company_name_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_card"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/company_profile_tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_card"
            android:layout_below="@+id/company_name_card"
            android:layout_marginEnd="8dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Profile:" />

        <TextView
            android:id="@+id/company_profile_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_card"
            android:layout_below="@+id/company_name_card"
            android:layout_toEndOf="@+id/company_profile_tv_card"
            android:textSize="15dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/company_stipend_tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_card"
            android:layout_below="@+id/company_profile_tv_card"
            android:layout_marginEnd="8dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Stipend:" />

        <TextView
            android:id="@+id/company_stipend_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_card"
            android:layout_below="@+id/company_profile_card"
            android:layout_toEndOf="@+id/company_stipend_tv_card"
            android:textSize="15dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/text_loc_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_card"
            android:layout_below="@+id/company_stipend_card"
            android:layout_marginEnd="8dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Location:" />

        <TextView
            android:id="@+id/company_location_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_card"
            android:layout_below="@+id/company_stipend_card"
            android:layout_toEndOf="@+id/text_loc_card"
            android:textSize="15dp"
            android:text="TextView" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/visited_card"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/green_dot"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>